<Page x:Class="WPF_FinalEX.FrameFolder.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_FinalEX.FrameFolder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autorization" 
      >

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel
            Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock>
                    <TextBlock.Text>
                        Логин
                    </TextBlock.Text>
                </TextBlock>
                <TextBox x:Name="TBOXLog" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock>
                    <TextBlock.Text>
                        Пароль
                    </TextBlock.Text>
                </TextBlock>
                <TextBox x:Name="TBOXPass" Width="100"/>
            </StackPanel>
            <Button x:Name="BAuto" Click="BAuto_Click"> Зайти </Button>
        </StackPanel>
       
    </Grid>
</Page>
